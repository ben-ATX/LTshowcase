@page "{id:int}"
@model LTshowcase.Pages.Products.Details

<div class="row">
    <div class="column">
        <h3 class="modal-title" id="title">@Model.Data.Title</h3>
        <a class="text-decoration-none d-inline-flex align-items-center" href="javascript:history.back()">
            <svg bootstrap-icon="ArrowLeft" width="18" height="18" aria-label="Search"></svg>
            <span class="ms-1">Go Back</span>
        </a>
        <hr />                       
    </div>
</div>
<div class="row">
    <div class="column col-6">
        <img src="@Model.Data.Images.FirstOrDefault()" alt="Product Image" class="img-fluid" />
    </div>
    <div class="column col-6">
        <p class="mt-4 pt-4">@Model.Data.Description</p>
        <p><strong>Price: </strong>@Model.Data.Price.ToString("C")</p>
    </div>
</div>